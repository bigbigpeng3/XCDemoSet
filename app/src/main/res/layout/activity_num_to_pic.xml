<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.pengzhangdemo.com.myapplication.bigbigpeng3.NumToPicActivity">


    <TextView
        android:id="@+id/tv_span"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"/>


    <com.pengzhangdemo.com.myapplication.bigbigpeng3.numpic.NumToPicView
        android:id="@+id/num_pic_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"/>


    <com.pengzhangdemo.com.myapplication.bigbigpeng3.numpic.NumView
        android:id="@+id/nv_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        />

    <com.pengzhangdemo.com.myapplication.widget.StrokeTextView
        android:id="@+id/tv_ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="1234567890"
        android:textSize="30sp"
        app:innnerColor="#F3E275"
        app:outerColor="@color/black"
        />


    <com.robinhood.ticker.MyTickerView
        android:background="@android:color/holo_red_light"
        android:id="@+id/tv_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TickerTextAppearance"/>


    <com.robinhood.ticker.TickerView
        android:background="@android:color/holo_red_light"
        android:id="@+id/tv_num1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TickerTextAppearance"/>

    <!-- 下方按钮区域 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="add 1"/>

        <Button
            android:id="@+id/btn_add_ten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="add 10"
            android:textColor="#ff995533"/>


    </LinearLayout>


</LinearLayout>
